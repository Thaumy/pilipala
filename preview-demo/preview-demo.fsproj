<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <RootNamespace>preview_demo</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="app\cfg.fs" />
        <Compile Include="app\user.fs" />
        <Compile Include="ws\server.fs" />
        <Compile Include="ws\post\helper.fs" />
        <Compile Include="ws\post\getAllPostId.fs" />
        <Compile Include="ws\post\getPost.fs" />
        <Compile Include="ws\post\getPrevPost.fs" />
        <Compile Include="ws\post\getNextPost.fs" />
        <Compile Include="ws\comment\createComment.fs" />
        <Compile Include="Program.fs" />
        <ContentWithTargetPath Include="plugin/**">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <TargetPath>plugin/%(RecursiveDir)/%(Filename)%(Extension)</TargetPath>
        </ContentWithTargetPath>
        <ContentWithTargetPath Include="config/**">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <TargetPath>config/%(RecursiveDir)/%(Filename)%(Extension)</TargetPath>
        </ContentWithTargetPath>
    </ItemGroup>

    <ItemGroup>
        <Reference Include="fsharper">
            <HintPath>..\..\fsharper\bin\Debug\net6.0\fsharper.dll</HintPath>
        </Reference>
        <Reference Include="pilipala-frame">
            <HintPath>..\..\pilipala-sdk\pilipala-frame\bin\Debug\net6.0\pilipala-frame.dll</HintPath>
        </Reference>
        <Reference Include="pilipala-kernel">
            <HintPath>..\..\pilipala-kernel\pilipala-kernel\bin\Debug\net6.0\pilipala-kernel.dll</HintPath>
        </Reference>
        <Reference Include="pilipala.util">
            <HintPath>..\..\pilipala-sdk\pilipala.util\bin\Debug\net6.0\pilipala.util.dll</HintPath>
        </Reference>
        <Reference Include="websocket-sharp">
            <HintPath>..\..\websocket-sharp\websocket-sharp\bin\Release\net6.0\websocket-sharp.dll</HintPath>
        </Reference>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />
        <PackageReference Include="Markdig" Version="0.30.2" />
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="7.0.0-preview.7.22375.6" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
        <PackageReference Include="Npgsql" Version="7.0.0-rc.1" />
        <PackageReference Include="NReco.Logging.File" Version="1.1.5" />
    </ItemGroup>

</Project>
