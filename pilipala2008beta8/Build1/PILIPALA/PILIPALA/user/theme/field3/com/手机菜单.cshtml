<!-- vue导航组件 -->
<script>
    Vue.component('m-card', {
        props: ['item'],
        template: '<div class="Card cur bRds" v-on:click="m_card_click(item.ID)" :key="item.index"><div class="contain">{{item.Title}}</div></div>',
        methods: {
            m_card_click: function (ID) {
                up();
                ListToggle();

                if (ID == -1) {
                    showHome();
                } else {
                    showPost(ID);
                }

                AvaOutline.style = {
                    'border-color': 'rgba(0,0,0,0)'
                }
                CoOutline.style = {
                    'border-color': 'rgba(0,0,0,0)'
                }
            }
        }
    })
</script>