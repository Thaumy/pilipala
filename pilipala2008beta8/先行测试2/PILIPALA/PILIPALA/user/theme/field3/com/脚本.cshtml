<script>
    /* 向上滚动NavLine展开 */
    var p = 0;
    t = 0;
    $(window).scroll(debounce(function () {
        /* 触发宽度 */
        if ($(window).width() < 1000) {
            p = $(this).scrollTop();
            if (t <= p) {
                /* 防止触发遮住文本首部 */
                if ($(window).scrollTop() >= 20) {
                    $("#NavLine").slideUp(200);
                }
            } else {
                /* 触发高度：小于20或大于200 */
                if ($(window).scrollTop() <= 20 | $(window).scrollTop() >= 200) {
                    $("#NavLine").slideDown(150);
                }
            }
            t = p;
        } else {
            $("#NavLine").slideUp(200);
        }
    }, 50))

    /* 触发宽度外，收起NavLine */
    $(window).resize(function () {
        if ($(window).width() >= 1000) {
            $("#NavLine").slideUp(200);
        }
    });
</script>
