<!-- 所需引用 -->
@using LibStruct.pilipala;
@using PILIPALA.pala_custom.theme.field2.web_service;
@using PILIPALA.pala_system.service;

<!-- 初始化 -->
@{ Basic BS = new Basic(); }

<div class="fixed">

    @{
        List<TextArchiv> text_archiv = new List<TextArchiv>
{
                new TextArchiv(){ val = "页面" },
                new TextArchiv(){ val = "友情链接" },
            };
    }
    @{List<int> TextIDList = BS.getTextIDList(text_archiv); }

    <div class="NavLine L M bSha b50">
        <div onclick="up();showHome()" class="contain cur bRds">
            <div class="Avatar bSha"></div>
            <div class="Name">THAUMY的小站</div>
        </div>
        <div class="SiderBtn R" onclick="ListToggle()"></div>
    </div>

    <div class="SiderList bSha">

        @foreach (int text_id in TextIDList)
        {
            <div class="Card cur bRds" onclick="up();ListToggle();showText(@text_id)">
                <div class="contain">@BS.getTextTitle(text_id)</div>
            </div>
        }

        <div class="Co cur" onclick="up(); ListToggle();showText(12388)">
            Thaumy的博客©2016-2020保留所有权利<br>
            基于pilipala构建<br>
            Field Theme Designed By Thaumy<br>
        </div>
    </div>

    <div class="Shadow" onclick="ListToggle()"></div>
    <div class="upBtn bSha bRds b55" style="display: none" onclick="up()"></div>

</div>