<!-- 所需引用 -->
@using LibStruct.pilipala;
@using PILIPALA.pala_custom.theme.field2.web_service;
@using PILIPALA.pala_system.service;

<!-- 通用初始化 -->
@{ Basic BS = new Basic(); }
<!-- 变量初始化 -->
@{List<int> TextIDList; }
<!-- 其他初始化 -->
@{
    List<TextArchiv> text_archiv = new List<TextArchiv>
{
    new TextArchiv(){ val = "页面" },
    new TextArchiv(){ val = "友情链接" },
};
    TextIDList = BS.getTextIDList(text_archiv);
}



<div class="NavCol bSha bRds b50">

    <div onclick="up();showHome()" class="contain bRds">
        <div class="Avatar bSha cur"></div>
        <div class="Name">THAUMY的小站</div>
        <div class="JieShao"><span class="jieshao"></span></div>
    </div>

    <div class="List">
        @foreach (int text_id in TextIDList)
        {
            <div class="Card cur bRds" onclick="up();showText(@text_id)">
                <div class="contain">@BS.getTextTitle(text_id)</div>
            </div>
        }
    </div>

    <div class="Co cur" onclick="up();showText(12388)">
        Thaumy的博客©2016-2019保留所有权利<br>
        基于pilipala构建<br>
        Field Theme Designed By Thaumy<br>
    </div>

</div>

